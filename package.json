{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "description": "A simple boilerplate for ts projects using typescript",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test-run": "mocha -r ts-node/register test/**/*.spec.ts ",
    "test-debug": "mocha --inspect-brk -r ts-node/register test/**/*.spec.ts ",
    "test-watch": "mocha -w --extension ts -r ts-node/register test/**/*.spec.ts",
    "build": "tsc"
  },
  "author": "Fernando Ferreira",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.1",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "mocha": "^6.2.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.2"
  }
}
